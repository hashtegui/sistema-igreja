#: import CadastroPessoas src.view.pessoasview
ScreenManager:
    TelaInicial:
    CadastroPessoas:


<TelaInicial>:
    MDGridLayout:
        cols:1
        rows:3
        MDGridLayout:
            spacing:10
            rows:2
            cols:6
            MDRaisedButton:
                text: "Cadastros"
                on_press: root.manager.current = 'cadastro_pessoa'
            MDRaisedButton:
                text: "Dízimos"

            MDRaisedButton:
                text: "Cadastros"
            MDRaisedButton:
                text: "Dízimos"


<CadastroPessoas>:

    name: 'cadastro_pessoa'
    MDFloatLayout:
        MDLabel:
            text: 'Cadastro de Pessoas'
            font_style: "H2"
            pos_hint: { "x": 0.2 , 'center_y':.9}
        MDLabel:
            pos_hint: {"center_y":0.53, "x": 0.2}
            text: 'Nome'
        MDTextField:
            mode: "rectangle"
            pos_hint: {'y': 0.5, "center_x": 0.5 }
            size_hint: 0.4,None
            hint_text: 'Primeiro Nome'