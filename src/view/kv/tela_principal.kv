#: import CadastroPessoas src.view.pessoasview
ScreenManager:
    TelaInicial:
    CadastroPessoas:


<TelaInicial>:
    MDGridLayout:
        cols:1
        rows:3
        MDGridLayout:
            spacing:10
            rows:2
            cols:6
            MDRaisedButton:
                text: "Cadastros"
                on_press: root.manager.current = 'cadastro_pessoa'
            MDRaisedButton:
                text: "Dízimos"

            MDRaisedButton:
                text: "Cadastros"
            MDRaisedButton:
                text: "Dízimos"


<CadastroPessoas>:

    name: 'cadastro_pessoa'
    MDFloatLayout:
        MDLabel:
            text: 'Cadastro de Pessoas'
            font_style: "H2"
            pos_hint: { "x": 0.2 , 'center_y':.9}
        MDTextField:
            mode: "rectangle"
            pos_hint: {'y': 0.5, "center_x": 0.5 }
            size_hint: 0.4,None
            hint_text: 'Primeiro Nome'

        MDTextField:
            mode: "rectangle"
            pos_hint: {'y': 0.4, "center_x": 0.5 }
            size_hint: 0.4,None
            hint_text: 'Sobrenome'


        MDTextField:
            id: text_field
            mode: "rectangle"
            pos_hint: {'y': 0.3, "center_x": 0.5 }
            size_hint: 0.4,None
            value: root.data
            hint_text: 'Teste data'
            #on_focus: root.show_date()

        MDIconButton:
            icon: "timetable"
            pos_hint: {"center_y": .345, "center_x": 0.75}
            theme_text_color: "Hint"

            